@model IEnumerable<SharedCode.Model.RentalItem>
@{
    ViewData["Title"] = "Rental History";
}
<head>
    <style>
    </style>
</head>
<div class="container" style="margin-top: 100px">
    <div>
        <div class="row">
            <h4 class="text-center" style="margin: .5em auto;">Rental History</h4>
        </div>
        <div class="row">
            <div class="col-sm-4">
                <div class="text-center">
                    <div class="btn-group">
                        <button class="btn dropdown-toggle filter-label" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Type
                            <span class="caret"></span>
                            <a asp-controller="Home" asp-action="TypeFilter" asp-route-type="TV Show" class="btn btn-primary">TV Shows</a>
                        </button>
                    </div>
                </div>

            </div>

            <div class="col-sm-4">
                <div class="text-center">
                    <div class="dropdown">
                        <button class="btn dropdown-toggle filter-label" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Category
                            <a asp-controller="Home" asp-action="TypeFilter" asp-route-type="TV Show" class="btn btn-primary">TV Shows</a>
                        </button>
                    </div>
                </div>

            </div>

        </div>

    </div>


    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.RentalDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ReturnDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>


            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RentalDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReturnDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <a asp-controller="Home" asp-action="ConfirmBorrow" asp-route-id="@item.RentalId">Borrow</a>
                </td>
            </tr>
            }
        </tbody>
    </table>




</div>




