@model IEnumerable<RentMe.Models.MediaModel>

@{
    ViewData["Title"] = "Browse";
    }

<h2>Browse</h2>
<div class="container">
    <div>
        <div class="row">

            <div class="col-sm-4">
                <div class="text-center">
                    <div class="btn-group">
                        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Type
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a>Books</a></li>
                            <li><a>Movies</a></li>
                            <li><a>TV Shows</a></li>
                        </ul>
                    </div>
                </div>

            </div>

            <div class="col-sm-4">
                <div class="text-center">
                    <div class="btn-group">
                        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Category
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a>Adventure</a></li>
                            <li><a>Horror</a></li>
                            <li><a>Comedy</a></li>
                            <li><a>Romance</a></li>
                        </ul>
                    </div>
                </div>

            </div>

            <div class="col-sm-4">
                <div class="text-center">
                    <div class="btn-group">
                        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Rating
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a>0 - 0.99</a></li>
                            <li><a>1 - 1.99</a></li>
                            <li><a>2 - 2.99</a></li>
                            <li><a>3 - 3.99</a></li>
                            <li><a>4 - 5</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </div>
    <table class="table">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Title)
            </th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
            </tr>
        }
        
    </table>
</div>


