@model IEnumerable<RentMe.Models.MediaModel>

@{
    ViewData["Title"] = "Browse";
}

@section Styles {
    <link href="C:\Users\Carson\source\repos\CS4982CapstoneProject\code\RentMe\RentMe\Styles\StyleSheet.css" rel="stylesheet" />
}

<div class="container" style="margin-top: 100px">
    <div>
        <div class="row">
            <div class="col-sm-4">
                <div class="text-center">
                    <div class="btn-group">
                        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Type
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a>Books</a></li>
                            <li><a>Movies</a></li>
                            <li><a>TV Shows</a></li>
                        </ul>
                    </div>
                </div>

            </div>

            <div class="col-sm-4">
                <div class="text-center">
                    <div class="btn-group">
                        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Category
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a>Adventure</a></li>
                            <li><a>Horror</a></li>
                            <li><a>Comedy</a></li>
                            <li><a>Romance</a></li>
                        </ul>
                    </div>
                </div>

            </div>

            <div class="col-sm-4">
                <div class="text-center">
                    <div class="btn-group">
                        <button class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Rating
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a>0 - 0.99</a></li>
                            <li><a>1 - 1.99</a></li>
                            <li><a>2 - 2.99</a></li>
                            <li><a>3 - 3.99</a></li>
                            <li><a>4 - 5</a></li>
                        </ul>
                    </div>
                </div>

            </div>
        </div>

    </div>

    <div class="list-group" style="margin-top:50px;">



        @foreach (var item in Model)
        {
            <button type="button" class="list-group-item">
                <div class="col-sm-4 text-center browseItem">
                    @Html.DisplayFor(modelItem => item.Title)
                </div>
                <div class="col-sm-4 text-center browseItem">
                    @Html.DisplayFor(modelItem => item.Category)
                </div>
                <div class="col-sm-4 text-center browseItem">
                    Something else
                </div>
            </button>
        }
    </div>

    <div class="row">
        
        <div class="col-6 text-center">
            <button class="btn btn-primary">Borrow Item</button>
        </div>
    </div>



</div>


