
@model SharedCode.Model.RentalItem
@using RentMeEmployee.Controllers

@{
	ViewData["Title"] = "UpdateStatus";
}

<h2 class="text-center">Update </h2>

<div class="row">
	<div class="col-sm-3 text-center">
		<h4>Transaction ID</h4>
	</div>
	<div class="col-sm-3 text-center">
		<h4>Customer Email</h4>
	</div>
	<div class="col-sm-3 text-center">
		<h4>Status</h4>
	</div>

	<div class="col-sm-3 text-center">
		<h4>Condition</h4>
	</div>
</div>

@using (Html.BeginForm("ConfirmedUpdate", "Orders", FormMethod.Post))
{
	@Html.HiddenFor(item => item.Title)
	<div class="row" style="margin: 0 0 .7em 0">
		@Html.AntiForgeryToken()
		<div class="col-sm-3 text-center">
			@Html.DisplayFor(item => item.RentalId)
			@Html.HiddenFor(item => item.RentalId)
		</div>
		<div class="col-sm-3 text-center">
			@Html.DisplayFor(item => item.MemberEmail)
			@Html.HiddenFor(item => item.MemberEmail)
		</div>
		<div class="col-sm-3 text-center">

			@Html.DropDownListFor(item => item.Status, new List<SelectListItem>(OrdersController.Statuses))
			@Html.ValidationMessageFor(item => item.Status, "", new { @class = "text-danger" })


		</div>
		
	
	<div class="col-sm-3 text-center">
		@Html.DropDownListFor(item => item.Condition, new List<SelectListItem>(OrdersController.Conditions))
		@Html.ValidationMessageFor(item => item.Condition, "", new { @class = "text-danger" })
	</div>


	</div>
	<div class="row">
		<div class="col">
			<input type="submit" value="Confirm" class="btn btn-primary btn-block text-uppercase" />
		</div>
	</div>
}



<div class="form-group">
	<div class="col-md-2 offset-md-2">
		<label class="text-danger">@ViewBag.ErrorMessage</label>
	</div>
</div>

